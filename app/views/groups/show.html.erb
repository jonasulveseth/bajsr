<% content_for :full_width_layout, true %>

<div class="min-h-screen bg-gradient-to-br from-slate-900 via-green-900 to-emerald-900">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-4xl font-bold text-white mb-2"><%= @group.name %></h1>
        <p class="text-white/70"><%= @members.count %> members ‚Ä¢ <%= @pins.count %> pins</p>
      </div>
      <div class="flex space-x-4">
        <%= link_to groups_path, class: "bg-white/10 hover:bg-white/20 text-white px-4 py-2 rounded-lg transition-colors" do %>
          <svg class="inline-block w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Groups
        <% end %>
        <%= link_to edit_group_path(@group), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors" do %>
          Edit Group
        <% end %>
      </div>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Members Section -->
      <div class="lg:col-span-1">
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-semibold text-white">Members</h2>
            <button onclick="toggleInviteForm()" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm transition-colors">
              Invite
            </button>
          </div>

          <!-- Invite Form -->
          <div id="inviteForm" class="hidden mb-4 p-4 bg-white/5 rounded-lg">
            <%= form_with url: invite_group_path(@group), method: :post, local: true do |form| %>
              <div class="flex space-x-2">
                <%= form.email_field :email, 
                    placeholder: "Enter email address",
                    class: "flex-1 px-3 py-2 bg-white/10 border border-white/20 rounded text-white placeholder-white/50 focus:border-green-400 focus:outline-none transition-colors" %>
                <%= form.submit "Invite", class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded transition-colors" %>
              </div>
            <% end %>
          </div>

          <!-- Members List -->
          <div class="space-y-2">
            <% @members.each do |member| %>
              <div class="flex items-center justify-between p-3 bg-white/5 rounded-lg">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
                    <span class="text-white font-semibold text-sm">
                      <%= member.email_address.first.upcase %>
                    </span>
                  </div>
                  <div>
                    <p class="text-white font-medium"><%= member.email_address.split('@').first %></p>
                    <p class="text-white/50 text-sm"><%= member.pins.count %> pins</p>
                  </div>
                </div>
                <% if member == current_user %>
                  <span class="text-green-400 text-sm">You</span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Pins Section -->
      <div class="lg:col-span-2">
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-6">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-semibold text-white">Group Pins</h2>
            <%= link_to new_pin_path, class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors" do %>
              <svg class="inline-block w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              Add Pin
            <% end %>
          </div>

          <% if @pins.any? %>
            <div class="grid gap-4 md:grid-cols-2">
              <% @pins.each do |pin| %>
                <div class="bg-white/5 border border-white/10 rounded-lg p-4 hover:border-green-400/30 transition-all duration-300">
                  <% if pin.image.attached? %>
                    <div class="mb-3">
                      <%= image_tag pin.image, class: "w-full h-32 object-cover rounded-lg" %>
                    </div>
                  <% end %>
                  
                  <div class="flex items-center justify-between mb-2">
                    <div class="flex">
                      <% 5.times do |i| %>
                        <svg class="w-4 h-4 <%= i < pin.rating ? 'text-yellow-400' : 'text-gray-400' %>" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      <% end %>
                    </div>
                    <span class="text-white/50 text-sm"><%= time_ago_in_words(pin.created_at) %> ago</span>
                  </div>
                  
                  <p class="text-white mb-3 line-clamp-2"><%= pin.comment %></p>
                  
                  <div class="flex items-center justify-between text-sm text-white/60">
                    <span>üìç <%= number_with_precision(pin.latitude, precision: 4) %>, <%= number_with_precision(pin.longitude, precision: 4) %></span>
                    <span>by <%= pin.user.email_address.split('@').first %></span>
                  </div>
                  
                  <div class="mt-3">
                    <%= link_to "View Details", pin_path(pin), class: "bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm transition-colors" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <div class="text-white/50 text-lg mb-4">No pins in this group yet</div>
              <%= link_to "Add the first pin", new_pin_path, class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function toggleInviteForm() {
  const form = document.getElementById('inviteForm');
  form.classList.toggle('hidden');
}
</script>
