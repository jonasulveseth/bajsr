<% content_for :title, "Bjud in till #{@group.name}" %>

<section class="min-h-screen bg-gradient-to-br from-slate-900 via-green-900 to-emerald-900 py-12 px-4">
  <div class="max-w-2xl mx-auto bg-white/10 backdrop-blur-sm border border-white/20 rounded-3xl p-8 shadow-xl">
    <header class="mb-8">
      <p class="text-sm uppercase tracking-wider text-white/60">Bjud in ny medlem</p>
      <h1 class="mt-2 text-3xl font-bold text-white"><%= @group.name %></h1>
      <p class="mt-3 text-white/70">Skicka en inbjudan via e‑post. Mottagaren får en länk för att skapa konto och ansluta sig automatiskt till gruppen.</p>
    </header>

    <%= form_with model: @invitation, url: invite_group_path(@group), local: true, class: "space-y-6" do |form| %>
      <% if @invitation.errors.any? %>
        <div class="bg-red-500/20 border border-red-500/30 rounded-xl p-4 text-red-100">
          <p class="font-semibold mb-2">Det blev något fel:</p>
          <ul class="text-sm space-y-1">
            <% @invitation.errors.full_messages.each do |message| %>
              <li>• <%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :email, "E-postadress", class: "block text-sm font-medium text-white/80 mb-2" %>
        <%= form.email_field :email, required: true, autofocus: true, placeholder: "namn@example.com", class: "w-full rounded-xl border border-white/20 bg-white/10 px-4 py-3 text-white placeholder-white/50 focus:border-green-400 focus:outline-none" %>
      </div>

      <div class="flex gap-3">
        <%= form.submit "Skicka inbjudan", class: "inline-flex items-center justify-center bg-green-600 hover:bg-green-500 text-white font-semibold px-6 py-3 rounded-xl transition-colors" %>
        <%= link_to "Tillbaka", groups_path, class: "inline-flex items-center justify-center bg-white/10 hover:bg-white/20 text-white font-medium px-6 py-3 rounded-xl transition-colors" %>
      </div>
    <% end %>
  </div>
</section>
