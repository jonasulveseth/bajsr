<section class="mx-auto w-full max-w-lg">
  <div class="rounded-3xl border border-slate-200 bg-white/95 shadow-lg shadow-slate-900/5 backdrop-blur-sm px-6 py-8 sm:px-10">
    <% if @user.errors.any? %>
      <div class="py-3 px-4 bg-red-50 mb-6 rounded-lg border border-red-100">
        <p class="text-red-600 font-semibold mb-2">We couldn't create your account:</p>
        <ul class="list-disc list-inside text-sm text-red-500 space-y-1">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <header class="space-y-2">
      <h1 class="text-3xl sm:text-4xl font-bold text-slate-900">Create your account</h1>
      <p class="text-sm text-slate-600">Set up your profile to start contributing to the community.</p>
    </header>

    <div class="mt-8">
      <%= form_with model: @user, url: registration_path, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-slate-700" %>
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "Enter your email address", class: "mt-2 block w-full rounded-xl border border-slate-300 px-3 py-2 text-base shadow-sm focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-200" %>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-slate-700" %>
          <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Create a password", minlength: 8, maxlength: 72, class: "mt-2 block w-full rounded-xl border border-slate-300 px-3 py-2 text-base shadow-sm focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-200" %>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-slate-700" %>
          <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72, class: "mt-2 block w-full rounded-xl border border-slate-300 px-3 py-2 text-base shadow-sm focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-200" %>
        </div>

        <%= form.submit "Create account", class: "w-full text-center rounded-xl px-4 py-3 bg-green-600 hover:bg-green-500 text-white font-semibold transition-colors" %>
      <% end %>
    </div>

    <div class="mt-6 text-sm text-slate-600">
      <span>Already have an account?</span>
      <%= link_to "Sign in", new_session_path, class: "text-blue-700 hover:text-blue-600 font-medium ml-1" %>
    </div>
  </div>
</section>
