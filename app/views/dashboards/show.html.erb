<section class="space-y-8">
  <header>
    <p class="text-sm uppercase tracking-wide text-slate-500 font-semibold">Welcome back</p>
    <h1 class="mt-2 text-3xl font-bold text-slate-900">Hi <%= Current.user.email_address %></h1>
    <p class="mt-2 text-slate-600">Here's a quick overview of your activity.</p>
  </header>

  <div class="grid gap-6 md:grid-cols-2">
    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-lg font-semibold text-slate-900">Your latest pins</h2>
      <p class="mt-2 text-sm text-slate-600">Stay tuned! We'll surface your most recent pins here.</p>
      <%= link_to "View pins", pins_path, class: "mt-4 inline-flex items-center text-sm font-medium text-green-700 hover:text-green-600" %>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="text-lg font-semibold text-slate-900">Groups</h2>
      <p class="mt-2 text-sm text-slate-600">Collaborate with others tracking the outdoors.</p>
      <%= link_to "Browse groups", groups_path, class: "mt-4 inline-flex items-center text-sm font-medium text-green-700 hover:text-green-600" %>
    </div>
  </div>
</section>
